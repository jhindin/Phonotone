<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jhindin.phonotone" >

    <uses-feature
        android:name="android.hardware.touchscreen.jazzhand"
        android:required="true" />

    <application
        android:name=".PhonotoneApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RearKeysActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstrumentSelectionActivity"
            android:label="@string/title_activity_instrument_selection" >
        </activity>
    </application>

</manifest>
